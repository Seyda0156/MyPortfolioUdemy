@model About
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Ekleme</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili ekleme işlemleri aşağıdaki panelden yapabilirisniz
						</div>

						<form method="post">
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Alt Açıklama</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />
							<label>Detay</label>
							<input type="text" asp-for="Detail" class="form-control" />
							<br />
							<button class="btn btn-primary">Hakkımda Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

