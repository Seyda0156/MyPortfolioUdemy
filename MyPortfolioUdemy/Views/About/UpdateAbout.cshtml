@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Güncelleme</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili güncelleme işlemleri aşağıdaki panelden yapabilirisniz
						</div>

						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Alt Açıklama</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />
							<label>Detay</label>
							<input type="text" asp-for="Detail" class="form-control" />
							<br />
							<button class="btn btn-warning">Hakkımda Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

