@model List<Testimonial>
@{
	ViewData["Title"] = "TestimonialList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referans ile ilgili işlemleri aşağıdaki panelden yapabilirisniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Resim Yolu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><img src="@item.ImageUrl" style=height:75px; width:75px"></td>
										<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Oluştur</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

