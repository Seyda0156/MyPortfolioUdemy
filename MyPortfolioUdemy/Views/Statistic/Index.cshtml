@model List<Skill>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="container" style="padding-top: 70px;">
	<div class="col-xl-4 col-lg-5">
	<div class="card mb-4">
		<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
			<h6 class="m-0 font-weight-bold text-primary">Diller</h6>
		</div>
		<div class="card-body">
			@foreach (var item in Model)
			{
				<div class="mb-3">
					<div class="small text-gray-500">
						@item.Title
						<div class="small float-right"><b>@item.Value</b></div>
					</div>
					<div class="progress" style="height: 12px;">
						<div class="progress-bar bg-warning" role="progressbar" style="width: @item.Value%" aria-valuenow="80"
						aria-valuemin="0" aria-valuemax="100"></div>
					</div>
				</div>
			}
		</div>
		<div class="card-footer text-center">
			<a class="m-0 small text-primary card-link" href="/Default/Index">
				Daha Fazlası İçin <i class="fas fa-chevron-right"></i>
			</a>
		</div>
	</div>
</div>
</div>

