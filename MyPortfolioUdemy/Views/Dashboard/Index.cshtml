@model MyPortfolioUdemy.Models.ViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        padding: 30px;
        justify-content: center;
    }

    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        width: 250px;
        overflow: hidden;
        text-align: center;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        position: relative;
    }

        .card-header img.cover {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

    .avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 3px solid #fff;
        position: absolute;
        bottom: -35px;
        left: 50%;
        transform: translateX(-50%);
        background-color: #fff;
        object-fit: cover;
    }

    .card-body {
        padding: 50px 20px 20px;
    }

        .card-body h3 {
            margin: 10px 0 5px;
            font-size: 18px;
            font-weight: 600;
        }

        .card-body p {
            color: #666;
            font-size: 14px;
        }

    .github-link {
        display: block;
        padding: 10px;
        background-color: #f8f9fa;
        border-top: 1px solid #eee;
        text-decoration: none;
        color: #007bff;
        font-weight: 500;
    }

        .github-link:hover {
            background-color: #e9ecef;
            color: #0056b3;
        }

    .task-table {
        margin: 30px auto;
        max-width: 1000px;
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

</style>

<!-- Portfolyo Kartları -->
<div class="container mt-5 pt-5">
    <h2 class="mb-4 text-center">Projelerim</h2> <!-- Ortalanmış ve düzgün başlık -->

    <div class="row">
        @foreach (var item in Model.Portfolios)
        {
            <div class="col-md-4 mb-4">
                <!-- 3 kolona bölünüyor, responsive -->
                <div class="card h-100">
                    <div class="card-header p-0 position-relative">
                        <img src="@item.ImageUrl" alt="Cover" class="img-fluid" style="height: 150px; object-fit: cover;">
                        <img src="https://i.hizliresim.com/oo7vlgc.jpg" alt="Avatar" class="rounded-circle position-absolute top-100 start-50 translate-middle" style="width:70px; height:70px; border:3px solid #fff; background:#fff;">
                    </div>
                    <div class="card-body text-center mt-4">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.SubTitle</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@item.Url" class="btn btn-outline-primary">Github</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- ToDo Listesi Tablo -->
<div class="task-table">
    <h4 class="mb-4">Yapılacaklar</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Görev</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToDoLists)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                        </div>
                    </td>
                    <td>@item.Title</td>
                    <td>
                        <button type="button" data-toggle="tooltip" title="Düzenle" class="btn btn-sm btn-primary">
                            <i class="la la-edit"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" title="Sil" class="btn btn-sm btn-danger">
                            <i class="la la-times"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
