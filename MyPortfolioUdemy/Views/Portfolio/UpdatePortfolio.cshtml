@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projelerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Güncelleme</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Proje ile ilgili güncelleme işlemleri aşağıdaki panelden yapabilirisniz
						</div>

						<form method="post">
							<label>Id</label>
							<input type="hidden" asp-for="PortfolioId" class="form-control" />
							<br />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Alt Başlık</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Resim Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Url</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<button class="btn btn-warning">Proje Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

