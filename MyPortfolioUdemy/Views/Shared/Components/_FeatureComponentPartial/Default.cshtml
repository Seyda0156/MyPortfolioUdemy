@model List<MyPortfolioUdemy.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" style="background-image: url('https://i.hizliresim.com/trmz4y2.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; min-height: 100vh;">
    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">
            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projeler
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>
        </div> <!-- end home-content -->
    }

    <ul class="home-social">
        <li>
            <a href="https://www.instagram.com"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="https://www.facebook.com/?locale=tr_TR"><i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span></a>
        </li>
        <li>
            <a href="https://x.com"><i class="im im-twitter" aria-hidden="true"></i><span>X</span></a>
        </li>
        <li>
            <a href="https://www.linkedin.com"><i class="im im-linkedln" aria-hidden="true"></i><span>Linkedln</span></a>
        </li>
    </ul>

</section>
