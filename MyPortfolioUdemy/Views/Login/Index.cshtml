@model Admin
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Şeyda Nur Ovacı</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="/login-form-14/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Portfolyoma Hoşgeldiniz!</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(https://i.hizliresim.com/yy4iaz9.png);">
						</div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Oturum Aç</h3>
								</div>
							</div>
							<form method="post" asp-action="Index" asp-controller="Login" asp-area="Admin" class="signin-form">
								<div class="form-group mb-3">
									<label class="label" for="name">Kullanıcı Adı</label>
									<input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required>
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Şifre</label>
									<input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required>
								</div>
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
										<label class="checkbox-wrap checkbox-primary mb-0">
											Beni Hatırla
											<input type="checkbox" checked>
											<span class="checkmark"></span>
										</label>
									</div>
									<div class="w-50 text-md-right">
										<a href="#">Şifreyi Unuttum</a>
									</div>
								</div>
							</form>
							<p class="text-center">Üye değil misiniz? <a data-toggle="tab" href="#signup">Üye Ol</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="/login-form-14/js/jquery.min.js"></script>
	<script src="/login-form-14/js/popper.js"></script>
	<script src="/login-form-14/js//bootstrap.min.js"></script>
	<script src="/login-form-14/js//main.js"></script>

</body>
</html>

