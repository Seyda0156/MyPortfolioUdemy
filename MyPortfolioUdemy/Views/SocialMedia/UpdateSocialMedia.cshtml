@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Güncelleme</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili güncelleme işlemleri aşağıdaki panelden yapabilirisniz
						</div>

						<form method="post">
							<label>ıd</label>
							<input type="hidden" asp-for="SocialMediaId" class="form-control" />
							<br />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Url</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>İkon</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />
							<button class="btn btn-warning">Sosyal Medya güncelleme</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

